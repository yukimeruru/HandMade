<!DOCTYPE html>
<html>
  <head>
    <title>HandMade</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-light" >
        <div class="container">
          <div>
            <%= link_to root_path, class: "navbar-brand", local: true do %>
              <%= image_tag 'logo.png', size: "150x50"%>
            <% end %>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse flex-column" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <div class="mr-5 my-2"><strong>ようこそ、<%= current_user.name %>さん！</strong></div>
                <li class="nav-item"><%= link_to "マイページ", user_path(current_user.id), class: "nav-link fas fa-user-cog" %></li>
                <li class="nav-item"><%= link_to "作品一覧", items_path, class: "nav-link fas fa-cheese" %></li>
                <li class="nav-item"><%= link_to "依頼一覧", user_order_path(current_user.id), class: "nav-link fas fa-shopping-cart" %></li>
                <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link fas fa-sign-out-alt" %></li>
              <% else %>
                <li class="nav-item"><%= link_to "About", about_path, class: "nav-link fas fa-store" %></li>
                <li class="nav-item"><%= link_to "商品一覧", items_path, class: "nav-link fas fa-cheese" %></li>
                <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link fas fa-user-plus" %></li>
                <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link fas fa-sign-in-alt" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer class="fixed-bottom bg-dark">
      <div class="footer">
        <div class="row">
          <div class="py-4"></div>
        </div>
      </div>
    </footer>
  </body>
</html>
