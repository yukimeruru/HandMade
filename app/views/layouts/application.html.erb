<!DOCTYPE html>
<html>
  <head>
    <title>HandMade</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <nav class="navbar navbar-expand-lg navbar-dark navbar-light" >
        <div class="container">
          <div>
            <%= link_to root_path, class: "navbar-brand", local: true do %>
              <%= image_tag 'logo.png', size: "150x50"%>
            <% end %>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse flex-column" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item"><%= link_to "作業場", user_path(current_user.id), class: "nav-link fas fa-hammer" %></li>
                <li class="nav-item"><%= link_to "作品一覧", items_path, class: "nav-link fas fa-palette" %></li>
                <li class="nav-item"><%= link_to "職人さん", users_path, class: "nav-link fas fa-users" %></li>
                <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link fas fa-sign-out-alt" %></li>
              <% else %>
                <li class="nav-item"><%= link_to "About", about_path, class: "nav-link fas fa-store" %></li>
                <li class="nav-item"><%= link_to "作品一覧", items_path, class: "nav-link fas fa-palette" %></li>
                <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link fas fa-user-plus" %></li>
                <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link fas fa-sign-in-alt" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <div class="my-5"></div>
    <footer class="fixed-bottom bg-dark">
      <div class="footer">
        <div class="row">
          <div class="py-3"></div> <!--フッター重なり修正-->
        </div>
      </div>
    </footer>
  </body>
</html>
