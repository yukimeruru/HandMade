<div class="container">
  <div class="row">
    <dev class="col-8 mx-auto">
      <h2>依頼一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th class = "col-3 text-center">ユーザー名</th>
            <th>依頼作成日時</th>
            <th></th>
          </tr>
        </thead>
      　<tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class = "text-left col-3">
                <%= link_to user_path(order.user.id) do %>
                  <%= attachment_image_tag order.user, :image, :fill, 40, 40, fallback: "no_image_40.jpg" %>
                  <%= order.user.name %>
                <% end %>
              </td>
              <td class = "text-left"><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), show_order_path(order.id) %></td>
              <td class = "text-left"><%= order.comment_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
