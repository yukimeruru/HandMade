<div class="container">
  <div class="row">
    <dev class="col-8 mx-auto">
      <h2>依頼一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th class = "col-3 text-center">ユーザー名</th>
            <th>依頼作成日時</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
      　<tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class = "text-center col-3">
                <% reply_user = User.find(order.reply_id) %>
                <%= link_to user_path(order.reply_id) do %>
                  <%= attachment_image_tag reply_user, :image, :fill, 40, 40, fallback: "no_image_40.jpg", class: "image-user" %>
                  <%= reply_user.name %>
                <% end %>
              </td>
              <td class = "text-left"><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), show_order_path(order.id) %></td>
              <td class = "text-left"><%= order.comment_status_i18n %></td>
              <td class = "text-left"><%= link_to "削除" , destroy_order_path(order.id), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: '本当に削除しますか？' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
