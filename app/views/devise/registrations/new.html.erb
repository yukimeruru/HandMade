<div class="container offset-2 my-2">
  <div class="row">
    <div class="col-8 mx-auto">
　　<h2>Sign up</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :"名前" %><br />
          <%= f.text_field :name, autofocus: true, class: 'col-6 form-control' %>
        </div>

        <div class="field">
          <%= f.label :"Eメール" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-6 form-control' %>
        </div>

        <div class="field">
          <%= f.label :"パスワード(6文字以上)" %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'col-6 form-control' %>
        </div>

        <div class="field">
          <%= f.label :"パスワード(もう一度入力してください)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-6 form-control' %>
        </div>

        <div class="actions my-3">
          <%= f.submit "Sign up", class: 'btn btn-md btn-secondary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
　　</div>
  </div>
</div>