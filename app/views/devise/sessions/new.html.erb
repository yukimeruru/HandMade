<div class="container offset-2 my-2">
  <div class="row">
    <div class="col-8 mx-auto">
　　<h2>Log in</h2>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="field">
          <%= f.label :"Eメール" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-6 form-control' %>
        </div>

        <div class="field">
          <%= f.label :"パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'col-6 form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions my-3">
          <%= f.submit "Log in", class: 'btn btn-md btn-secondary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
