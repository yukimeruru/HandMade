<div class="container my-3">
  <h2>ブックマーク <small>全<%= @bookmarks.count %>件</small></h2>
  <div class="row my-3">
    <div class="d-flex flex-row flex-wrap">
      <% @bookmarks.each do |bookmark| %>
        <div class="d-flex flex-column mr-5 mt-3">
          <div>
            <%= link_to item_path(bookmark.item.id) do %>
              <%= attachment_image_tag bookmark.item, :image, :fill, 150, 150 %>
            <% end %>
          </div>
          <div>
            <i class="fas fa-eye"><%= bookmark.item.impressionist_count(:filter=>:session_hash) %></i>
            <i class="fas fa-heart"><%= bookmark.item.favorites.count %></i>
          </div>
          <%= bookmark.item.item_status_i18n %>
        </div>
      <% end %>
    </div>
  </div>
</div>